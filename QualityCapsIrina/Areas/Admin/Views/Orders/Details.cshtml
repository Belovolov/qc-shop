@model QualityCapsIrina.Models.Order

@{
    ViewData["Title"] = "Details";
}

<div class="row mb-4">
    <div class="col-md-6">
        <div class="order-summary order-block  p-3">
            <h4>Order summary</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Subtotal)
                </dt>
                <dd>
                    $@Html.DisplayFor(model => model.Subtotal)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GST)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.GST)%
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.GrandTotal)
                </dt>
                <dd>
                    $@Html.DisplayFor(model => model.GrandTotal)
                </dd>
                <dt>
                    Customer                     
                </dt>
                <dd>
                    @Model.Customer.FullName
                    <a target="_blank" rel="nofollow nofollow"
                       asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerID">
                        More details
                    </a>
                </dd>
                <dt>
                    Delivery address
                </dt>
                <dd>
                    @Model.Customer.FullAddress
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-md-6">
        <div class="order-items order-block p-3">
            <h4>Order items</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.Name)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.Item.Price)
                        </td>
                        <td>
                            <img src="@item.Item.ImageUrl" asp-append-version="true" width="80" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            $@(item.Quantity * item.Item.Price)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
