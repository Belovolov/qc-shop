@model ShopViewModel

@{
    ViewData["Title"] = "Men";
}

<section class="men-banner d-flex justify-content-start align-items-end pl-3 pb-3">
    @*<h2 class="section-header">Men</h2>*@
</section>

<div class="page-content-wrapper">
    @await Html.PartialAsync("ShopPageView", Model)
</div>

@section StyleSheets {
    <link href="~/css/shopping-page.css" rel="stylesheet" />
}
@section Scripts {
    <script type="text/javascript">
        $(".selection-1").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#dropDownSelect1')
        });

        $(".selection-2").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#dropDownSelect2')
        });
    </script>
    <script>
        $(function () {
            $("#slider-range").slider({
                range: true,
                min: @Model.MinPrice,
                max: @Model.MaxPrice,
                values: [@Model.MinPrice, @Model.MaxPrice],
                //values: [0,100],
                slide: function (event, ui) {
                    $("#value-lower").text(ui.values[0]);
                    $("#value-upper").text(ui.values[1]);
                }
            });
            //$("#value-lower").text($("#slider-range").slider("values", 0));
            //$("#value-upper").text($("#slider-range").slider("values", 1));
        });
    </script>
    <script>
        $('#sort-selection').on('change', function () {
            console.log('selected' + $(this).val())
        })
    </script>
}