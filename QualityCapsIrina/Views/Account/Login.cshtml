@model QualityCapsIrina.Models.ViewModels.LoginViewModel
@{ 
    ViewData["Title"] = "Login";
}
@*<div class="login-container">*@
    @*iv class="login-form-container">*@        
        <section id="form">
            <!--form-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-4 offset-md-2 offset-sm-0">
                        <div class="login-form">
                            <!--login form-->
                            <h2>Login to your account</h2>
                            <form 
                                  method="post" asp-controller="Account" asp-action="Login" 
                                  asp-route-returnUrl="@Model.ReturnUrl"
                            >
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                <div class="form-group">
                                    <input asp-for="EmailOrUsername" placeholder="Email or username" />
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" placeholder="Password" />
                                </div>
                                <span>
                                    <input type="checkbox" class="checkbox">
                                    Keep me signed in
                                </span>
                                <button type="submit" class="mt-3 btn btn-primary align-self-center">Login</button>
                            </form>
                        </div><!--/login form-->
                    </div>
                    <div class="col-sm-2 align-self-center">
                        <h2 class="or">OR</h2>
                    </div>
                    <div class="col-sm-4 align-self-center create-new">
                        <a class="btn btn-info" 
                           asp-action="Register"
                           asp-controller="Account"
                           asp-route-returnUrl="@Model.ReturnUrl">Create new account</a>
                    </div>
                </div>
            </div>
        </section><!--/form-->
    @*</div>*@
@*</div>*@